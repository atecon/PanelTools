# Helper function
function scalar equal_vectors (matrix y, matrix x)
    /* Check for element-wise equality of both vectors.
    return: scalar, TRUE (=1) of equal at each row, otherwise FALSE (=0). */

    y = vec(y)
    x = vec(x)

    d = abs(y .- x)
    d = selifr(d, ok(d))

    if sumc(d) == 0
        return TRUE
    else
        return FALSE
    endif
end function



