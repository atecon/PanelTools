function void test_pquantile (const bundles P)
    print "Start testing function pquantile()."

    loop foreach i P
        # Given + When
        series expected = P[i].expected
        series actual = pquantile(P[i].y, P[i].value)

        # Then
        assert(equal_vectors({actual}, {expected}) == TRUE)
    endloop
end function
